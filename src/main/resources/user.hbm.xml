<hibernate-mapping>
    <class name="org.example.models.User" table="users">
        <id name="id" column="id">
            <generator class="increment"/>
        </id>

        <property name="name" column="name"/>

        <!-- one-to-many -->
        <set name="orders" inverse="true">
            <key column="user_id"/>
            <one-to-many class="org.example.models.Order"/>
        </set>

    </class>
</hibernate-mapping>
