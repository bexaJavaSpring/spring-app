<hibernate-mapping>
    <class name="org.example.models.Order" table="orders">

        <id name="id" column="id">
            <generator class="increment"/>
        </id>

        <property name="product" column="product"/>

        <!-- many-to-one -->
        <many-to-one name="user"
                     column="user_id"
                     class="org.example.models.User"/>

    </class>
</hibernate-mapping>
